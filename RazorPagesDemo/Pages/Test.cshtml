@page
@model RazorPagesDemo.Pages.TestModel
@await Html.PartialAsync("Shared/_NavBar")

<h2>Greeting Page</h2>

<form method="post">
    <label>Name:</label>
    <input asp-for="Name" />
    <button type="submit">Greet</button>
</form>

@if (!string.IsNullOrEmpty(Model.Name))
{
    <p>Hello, @Model.Name!</p>
}
